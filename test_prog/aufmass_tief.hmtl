            });
            
            // Ordenar DPs
            const sortedDPs = Object.keys(measurementsByDP).sort((a, b) => {
                const numA = parseInt(a.replace(/\D/g, '')) || 0;
                const numB = parseInt(b.replace(/\D/g, '')) || 0;
                return numA - numB;
            });
            
